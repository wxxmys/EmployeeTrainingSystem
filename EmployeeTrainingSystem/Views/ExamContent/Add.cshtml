@model IEnumerable<EmployeeTrainingEntity.Information>

@using EmployeeTrainingEntity
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Add", "ExamContent", FormMethod.Post))
{
    <fieldset align="center">
        <legend>新建题目</legend>
        <div align="center">
            <table>
                <tr>
                    <td>试卷</td>
                    <td>
                        <select style="width:100px;" name="TestPaper.ID">
                            @foreach (var item in ViewBag.TestPaperValue)
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>题目</td>
                    <td>
                        <select style="width:100px;" name="Information.ID">
                            @foreach (var item in ViewBag.InformationValue)
                            {
                                <option value="@item.ID">@item.Subject</option>
                            }
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
    <input align="center" type="submit" class="btn btn-default" value="添加" style="margin-top: 20px; color:green;border:1px solid ;" />
    <div id="divContainer">

        <button type="button" class="btn btn-danger">@Html.ActionLink("返回", "Index", "ExamContent")</button>

    </div>
}

