@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">用户名</th>
            <th scope="col">Email</th>
            <th scope="col">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <th scope="row">@u.Id</th>
                <td scope="row">@u.UserName</td>
                <td scope="row">@u.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@u.Id" method="post">
                        <span> <button type="submit" class="btn btn-danger" onclick="return confirm('确认删除？')">删除</button> </span>
                    </form>
                    <a asp-action="UserUpdate" asp-controller="User" asp-route-id="@u.Id" class="btn btn-danger">修改</a>
                </td>
            </tr>
        }
    </tbody>

</table>
<a asp-action="AddUser" class="btn btn-danger">添加用户</a>

