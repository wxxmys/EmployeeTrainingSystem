@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<EmployeeTrainingEntity.TestPaper>
@using EmployeeTrainingEntity
<h3>试卷内容</h3>
<div class="text-center">

    <table class="table table-hover" border="1" style="margin:0 auto;">
        <thead>
            <tr>
                <th>试卷名称</th>
                @*<th>老师</th>
                <th>班级</th>*@
                <th>试卷创建时间</th>
                <th>考试时间</th>
                <th>成绩</th>
                <th>编辑</th>
                <th>编辑</th>
                <th>删除</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                @*<td>@item.Teacher.Name/td>
        <td>@item.CollegeClass.Name</td>*@
                <td>@item.Time</td>
                <td>@item.TestTime</td>
                <td>@item.Performance</td>
                <td><a asp-action="Detail" asp-route-id="@item.ID">详细</a></td>
                <td><a asp-action="Edit" asp-route-id="@item.ID">修改</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.ID">删除</a></td>
            </tr>
            }

        </tbody>
    </table>
    <div id="divContainer">
        <button type="button" class="btn btn-success">@Html.ActionLink("添加", "Add", "TestPaper")</button>


    </div>
</div>
