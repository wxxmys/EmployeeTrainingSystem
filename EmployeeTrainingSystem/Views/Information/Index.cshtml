@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<EmployeeTrainingEntity.Information>
@using EmployeeTrainingEntity
<h3>题库</h3>
<div class="text-center">

    <table class="table table-hover" border="1" style="margin:0 auto;">
        <thead>
            <tr>

                <th>标题</th>
                <th>内容</th>
                <th>答案</th>
                <th>课程分类</th>
                <th>编辑</th>
                <th>删除</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Title</td>
                    <td>@item.Subject</td>
                    <td>@item.Answer</td>
                    <td>@item.ClassSchedule.ClassScheduleName</td>
                    <td><a asp-action="Edit" asp-route-id="@item.ID">修改</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.ID">删除</a></td>
                </tr>
            }

        </tbody>
    </table>
    <div id="divContainer">
        <button type="button" class="btn btn-success">@Html.ActionLink("添加", "Add", "Information")</button>


    </div>
</div>
