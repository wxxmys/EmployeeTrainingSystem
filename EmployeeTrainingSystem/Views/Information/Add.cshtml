@model IEnumerable<EmployeeTrainingEntity.ClassSchedule>
@using EmployeeTrainingEntity
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Add", "Information", FormMethod.Post))
{
    <fieldset align="center">
        <legend>新建题目</legend>
        <div align="center">
            <table>
                <tr>
                    <td>标题：</td>
                    <td>
                        <input type="text" name="Title" />
                    </td>
                </tr>
                <tr>
                    <td>内容：</td>
                    <td>
                        <input type="text" name="Subject" />
                    </td>
                </tr>
                <tr>
                    <td>答案：</td>
                    <td>
                        <input type="text" name="Answer" />
                    </td>
                </tr>

                <tr>
                    <td>课程分类：</td>
                    <td>
                        <select style="width:100px;" name="ClassSchedule.ID">
                            @foreach (var item in ViewBag.ClassScheduleValue)
                            {
                                <option value="@item.ID">@item.ClassScheduleName</option>
                            }
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
    <input align="center" type="submit" class="btn btn-default" value="添加" style="margin-top: 20px; color:green;border:1px solid ;" />
    <div id="divContainer">

        <button type="button" class="btn btn-danger">@Html.ActionLink("返回", "Index", "Information")</button>

    </div>
}

 