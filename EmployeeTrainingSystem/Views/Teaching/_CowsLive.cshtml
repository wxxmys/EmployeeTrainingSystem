@model CowViewModel
<input type="hidden" asp-for="Category" value="@Model.Category" />
<div class="form-group">
    <label class="col-form-label">标题</label>
    <input asp-for="Title" class="form-control" required />
</div>
<div class="form-group">
    <label  class="col-form-label">直播地址</label>
    <input asp-for="LinkAddress" class="form-control" required />
</div>
<div class="form-group">
    <label class="col-form-label">选择开始时间</label>
    <input name="StartDate" class="form-control" type="datetime-local"  />
</div>
<div class="form-group">
    <label class="col-form-label">选择结束时间</label>
    <input name="EndDate" class="form-control" type="datetime-local"  />
</div>